<metric-config>
    <stat url="/manage/v2?view=status" entry-node="local-cluster-status" metric-type="AVG.AVG.COL">
        <metric-group xpath="status-relations|hosts-status|hosts-status-summary|load-properties|load-detail">
            <metric xpath="query-read-load" label="QueryRead|load"/>
            <metric xpath="journal-write-load" label="JournalWrite|load"/>
            <metric xpath="save-write-load" label="SaveWrite|load"/>
            <metric xpath="merge-read-load" label="MergeRead|load"/>
            <metric xpath="merge-write-load" label="MergeWrite|load"/>
            <metric xpath="backup-read-load" label="BackupRead|load"/>
            <metric xpath="backup-write-load" label="BackupWrite|load"/>
            <metric xpath="restore-read-load" label="RestoreRead|load"/>
            <metric xpath="restore-write-load" label="RestoreWrite|load"/>
            <metric xpath="large-read-load" label="LargeRead|load"/>
            <metric xpath="large-write-load" label="LargeWrite|load"/>
            <metric xpath="external-binary-read-load" label="ExternalBinaryRead|load"/>

            <metric xpath="xdqp-client-receive-load" label="XDQP Communication|ClientReceive|load"/>
            <metric xpath="xdqp-client-send-load" label="XDQP Communication|ClientSend|load"/>
            <metric xpath="xdqp-server-receive-load" label="XDQP Communication|ServerReceive|load"/>
            <metric xpath="xdqp-server-send-load" label="XDQP Communication|ServerSend|load"/>
            <metric xpath="foreign-xdqp-client-receive-load" label="XDQP Communication|ForeignClientReceive|load"/>
            <metric xpath="foreign-xdqp-client-send-load" label="XDQP Communication|ForeignClientSend|load"/>
            <metric xpath="foreign-xdqp-server-receive-load" label="XDQP Communication|ForeignServerReceive|load"/>
            <metric xpath="foreign-xdqp-server-send-load" label="XDQP Communication|ForeignServerSend|load"/>
            <metric xpath="xdqp-client-receive-load" label="XDQP Communication|ClientReceive|load"/>
        </metric-group>

        <metric-group xpath="status-relations|hosts-status|hosts-status-summary|rate-properties|rate-detail">
            <metric xpath="memory-process-swap-rate" label="Memory|ProcessSwapRate"/>
            <metric xpath="memory-system-pagein-rate" label="Memory|SystemPageInRate"/>
            <metric xpath="memory-system-pageout-rate" label="Memroy|SystemPageOutRate"/>
            <metric xpath="memory-system-swapin-rate" label="Memory|SystemSwapInRate"/>
            <metric xpath="memory-system-swapout-rate" label="Memory|SystemSwapOutRate"/>

            <metric xpath="query-read-rate" label="QueryRead|rate"/>
            <metric xpath="journal-write-rate" label="JournalWrite|rate"/>
            <metric xpath="save-write-rate" label="SaveWrite|rate"/>
            <metric xpath="merge-read-rate" label="MergeRead|rate"/>
            <metric xpath="merge-write-rate" label="MergeWrite|rate"/>
            <metric xpath="backup-read-rate" label="BackupRead|rate"/>
            <metric xpath="backup-write-rate" label="BackupWrite|rate"/>
            <metric xpath="restore-read-rate" label="RestoreRead|rate"/>
            <metric xpath="restore-write-rate" label="RestoreWrite|rate"/>
            <metric xpath="large-read-rate" label="LargeRead|rate"/>
            <metric xpath="large-write-rate" label="LargeWrite|rate"/>
            <metric xpath="external-binary-read-rate" label="ExternalBinaryRead|rate"/>

            <metric xpath="xdqp-client-receive-rate" label="XDQP Communication|ClientReceive|rate"/>
            <metric xpath="xdqp-client-send-rate" label="XDQP Communication|ClientSend|rate"/>
            <metric xpath="xdqp-server-receive-rate" label="XDQP Communication|ServerReceive|rate"/>
            <metric xpath="xdqp-server-send-rate" label="XDQP Communication|ServerSend|rate"/>
            <metric xpath="foreign-xdqp-client-receive-rate" label="XDQP Communication|ForeignClientReceive|rate"/>
            <metric xpath="foreign-xdqp-client-send-rate" label="XDQP Communication|ForeignClientSend|rate"/>
            <metric xpath="foreign-xdqp-server-receive-rate" label="XDQP Communication|ForeignServerReceive|rate"/>
            <metric xpath="foreign-xdqp-server-send-rate" label="XDQP Communication|ForeignServerSend|rate"/>
            <metric xpath="xdqp-client-receive-rate" label="XDQP Communication|ClientReceive|rate"/>
        </metric-group>
    </stat>
</metric-config>